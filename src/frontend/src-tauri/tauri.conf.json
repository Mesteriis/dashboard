{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Oko",
  "version": "0.1.0",
  "identifier": "com.oko.dashboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build:desktop",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Oko â€” Your Infrastructure in Sight",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "width": 1560,
        "height": 960,
        "minWidth": 1080,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": ["icons/icon.icns", "icons/icon.png"],
    "resources": ["binaries/oko-backend-aarch64-apple-darwin", "resources/dashboard.default.yaml"],
    "macOS": {
      "minimumSystemVersion": "13.0"
    }
  }
}
